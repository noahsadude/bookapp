<form action="<%- 'update' === formAction ? '/book/'+book.id : '/add' %>" method="post">
  <h2><%- 'update' ===formAction ? "Update Book" : "Add book to shelf" %></h2>
    <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">
  <input type="hidden" name="id" value="<%=book.id%>">
  <label>Title</label>
  <input type="text" value="<%=book.title%>" name="title" placeholder="<%=book.title%>">
  <label>Author</label>
  <input type="text" value="<%= book.authors %>" name="authors" placeholder="<%= book.authors %>">
  <label>ISBN</label>
  <input type="text" value="<%=book.isbn%>" name="isbn" placeholder="<%=book.isbn%>">
  <label>URL</label>
  <input type="text" value="<%=book.image%>" name="image" placeholder="<%=book.image%>">
  <textarea name="description" placeholder="<%=book.description%>" cols="30" rows="10"></textarea>
  <label>Shelf</label>
  <select>
    
  </select>
  <input type="text" value="<%=book.shelf%>" name="shelf" placeholder="book.shelf">   
  <button><%- 'update' ===formAction ? "Update Book Details" : "Add New Book" %></button> 
</form>